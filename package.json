{
  "name": "technoagentes",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run validate:env && vite build",
    "preview": "vite preview",
    "deploy": "npm run validate:env && amplify publish",
    "validate:env": "node scripts/validate-env.js",
    "validate:env:dev": "NODE_ENV=development npm run validate:env",
    "validate:env:prod": "NODE_ENV=production npm run validate:env",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:auth": "vitest run --reporter=verbose src/tests/auth",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "node scripts/run-tests.js all",
    "test:ci": "node scripts/run-tests.js ci",
    "test:integration": "node scripts/integration-test.js",
    "security:audit": "node scripts/security-audit.js",
    "security:check": "npm run security:audit && npm run validate:env",
    "deploy:validate": "node scripts/deployment-validation.js",
    "deploy:staging": "npm run test:integration && npm run security:check && npm run build",
    "deploy:production": "npm run deploy:staging && npm run deploy:validate && amplify publish --yes"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^4.24.0",
    "axios": "^1.3.0",
    "clsx": "^1.2.0",
    "date-fns": "^2.29.0",
    "i18next": "^22.4.0",
    "i18next-browser-languagedetector": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.0",
    "react-i18next": "^12.1.0",
    "react-router-dom": "^6.8.0",
    "zod": "^3.20.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.35.0",
    "postcss": "^8.4.0",
    "prettier": "^2.8.0",
    "tailwindcss": "^3.2.0",
    "vite": "^4.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "vitest": "^1.0.0",
    "jsdom": "^23.0.0",
    "msw": "^2.0.0",
    "@playwright/test": "^1.40.0"
  }
}
